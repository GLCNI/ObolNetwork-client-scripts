  erigon:
    image: thorax/erigon:stable
    ports:
      - "30303:30303/tcp" # p2p
      - "30303:30303/udp" # p2p
      - "42069:42069/tcp" # torrent
      - "42069:42069/udp" # torrent
      - "6060:6060" # metrics
#      - "8545:8545" # rpc and websockets
#      - "8551:8551" # engine
    Environment:
      ARCHIVE_NODE=false
    command: |
      erigon          
      --chain goerli
      --datadir=/data
      --snapshots       # Default true required for Goerli
      --externalcl      # required external consensus
      --nat=any        
      --port=30303
      --prune htcr      # required non-archival
      --maxpeers=100      
      --db.pagesize=16K      
      --authrpc.addr=0.0.0.0      
      --authrpc.port=8551
      --authrpc.vhosts=*
      --authrpc.jwtsecret="/root/jwt/jwt.hex"  
      --torrent.port=42069
      --http.addr=0.0.0.0
      --http.port=8545
      --http.vhosts=*
      --http.corsdomain=*
      --http.api=web3,eth,net,engine
      --ws
      --metrics
      --metrics.addr=0.0.0.0
      --metrics.port=6060
    networks: [dvnode]
    volumes:
      - ./data/erigon:/data
      - ./jwt:/root/jwt    
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro
    stop_grace_period: 1m
    restart: unless-stopped
